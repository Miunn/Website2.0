{% extends 'index.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block main %}

    <div class="wrapper">
        <h3>{{ 'admin.category'|trans }}
            <button type="button" class="cta">{{ 'admin.category.add'|trans }}</button>
        </h3>

        <section>
            <ul>
                {% for category in categories %}
                    <li class="category">
                        {{ category.name }}
                    </li>
                {% endfor %}
            </ul>
        </section>

        <h3>{{ 'admin.posts'|trans }}
            <button type="button" class="cta">{{ 'admin.posts.add'|trans }}</button>
        </h3>

        <section>
            <ul>
                {% for post in posts %}
                    <li>
                        {% include 'components/post.twig' with {'post': post} %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    </div>
{% endblock %}